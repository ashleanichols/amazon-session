<main class="container my-5">
  <div class="row">
    {{#if hasProducts}}
    {{#each products}}
    <div class="col-md-6 col-sm-12 col-lg-3 mt-2 d-flex text-center">

      <div class="card w100 drop-shadow">
        <div class="card-body d-flex flex-column justify-content-md-between">
          <div class="text-center">
            <a href="/products/{{id}}">
              <img src="{{imageUrl}}" alt="{{title}}" class="card-img img-fluid"
                style="width:150px; height:150px; object-fit:contain">
            </a>
            <h6 class="font-weight-semibold mt-2">
              <a href="/products/{{id}}"> {{title}}</a>
            </h6>

            <h3>${{price}} </h3>
          </div>

          <div class="mt-3 d-flex justify-content-between flex-shrink-1">
            <a href="/admin/edit-product/{{id}}?edit_mode=true" class="btn btn-warning text-light">EDIT </a>
            <form action="/admin/delete-product" method="POST">
              <button type="submit" class="btn btn-danger text-light">DELETE</button>
              <input type="hidden" name="id" value="{{id}}">
              <input type="hidden" name="price" value="{{price}}">
            </form>
          </div>

        </div>
      </div>
    </div>




    {{/each}}
    {{else}}
    <h1>No Products</h1>
    {{/if}}
  </div>
</main>