<section class="container mt-5">
    <div class="row">

        <div class="col-md-10 m-auto">
            {{#if hasProducts}}
            {{#each products}}
            <div class="card card-body my-2 drop-shadow">
                <div
                    class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                    <a href="/products/{{productId._id}}">
                        <img src="{{productId.imageUrl}}" width="160" height="160" alt="{{productIs.title}}"
                            style="object-fit: contain;">
                    </a>

                    <div class="media-body mr-3">
                        <h6 class="media-title font-weight-semibold">
                            <a href="/products/{{productId.id}}">{{productId.title}}</a>
                        </h6>
                        <p class="mb-3" id="prodDesc"> {{productId.desc}}</p>
                    </div>
                    <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                        <h3 class="">${{productId.price}} x{{qty}}</h3>

                        <form action="/cart-delete" method="POST">
                            <button type="submit" class="btn btn-danger mt-4 text-light"> DELETE
                            </button>
                            <input type="hidden" name="id" value="{{productId._id}}">
                            <input type="hidden" name="price" value="{{productId.price}}">
                            <input type="hidden" name="path" value="/cart">
                        </form>
                    </div>
                </div>
            </div>



            {{/each}}
            <hr>
            <div class="text-center">
                <form action="/orders" method="post">
                <button class="btn btn-primary">Order Now</button>

                </form>
                
            </div>
        </div>
        {{else}}
        <h1>No Products in cart</h1>
        {{/if}}
    </div>
</section>