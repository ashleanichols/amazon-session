<section class="container mt-5">
    <div class="row">

        <div class="col-md-10 m-auto">
            {{#if hasProducts}}
            {{#each products}}
           <div class="card card-body my-2 drop-shadow" >
               <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                   <a href="/products/{{_id}}">
                       <img src="{{imageUrl}}" width="160" height="160" alt="{{title}}" style="object-fit: contain;">
                   </a>

                   <div class="media-body mr-3">
                       <h6 class="media-title font-weight-semibold">
                           <a href="/products/{{_id}}">{{title}}</a>
                       </h6>
                       <p class="mb-3" id="prodDesc"> {{desc}}</p>
                   </div>
                   <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                       <h3 class="">${{price}}</h3>

                      <form action="/cart" method="POST">
                          <button type="submit" class="btn btn-warning mt-4 text-light">
                             <i class="fas fa-shopping-cart"></i> Add to Cart
                          </button>
                          <input type="hidden" name="id" value="{{_id}}">
                          <input type="hidden" name="path" value="/">
                      </form>
                   </div>
               </div>
           </div>
        {{/each}}
        </div>
        {{else}}
        <h1>No Products</h1>
        {{/if}}
    </div>
</section>